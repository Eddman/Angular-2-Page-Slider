{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./projects/out-tsc",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2015",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": [
            "jasmine"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@netocny/ng-page-slider": [
                "projects/netocny/ng-page-slider/src/public-api.ts"
            ]
        },
        "sourceMap": true,
        "declaration": false,
        "skipLibCheck": true,
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "pretty": true,
        "strict": true
    },
    "exclude": [
        "dist/",
        "**/out-tsc/"
    ]
}
